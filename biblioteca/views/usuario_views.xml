<odoo>
  <record id="view_biblioteca_usuario_tree" model="ir.ui.view">
    <field name="name">biblioteca.usuario.tree</field>
    <field name="model">biblioteca.usuario</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="cedula"/>
        <field name="email"/>
        <field name="phone"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_biblioteca_usuario_form" model="ir.ui.view">
    <field name="name">biblioteca.usuario.form</field>
    <field name="model">biblioteca.usuario</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="cedula"/>
            <field name="email"/>
            <field name="phone"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
