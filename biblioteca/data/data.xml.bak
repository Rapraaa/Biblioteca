<odoo>
  <data noupdate="1">

    <!-- ===================== SECUENCIAS ===================== -->
    <record id="seq_biblioteca_prestamo" model="ir.sequence">
      <field name="name">Secuencia Préstamos Biblioteca</field>
      <field name="code">biblioteca.prestamo.seq</field>
      <field name="prefix">PRE-%(y)s-</field>
      <field name="padding">5</field>
      <field name="company_id" eval="False"/>
    </record>

    <record id="seq_biblioteca_multa" model="ir.sequence">
      <field name="name">Secuencia Multas Biblioteca</field>
      <field name="code">biblioteca.multa.seq</field>
      <field name="prefix">MUL-%(y)s-</field>
      <field name="padding">5</field>
      <field name="company_id" eval="False"/>
    </record>

    <!-- ===================== CRON ===================== -->
    <!-- Marcar préstamos atrasados cada noche a las 23:00 -->
    <record id="ir_cron_biblioteca_atrasados" model="ir.cron">
      <field name="name">Biblioteca: Marcar atrasados</field>
      <field name="model_id" ref="model_biblioteca_prestamo"/>
      <field name="state">code</field>
      <field name="code">model.action_marcar_atrasados()</field>
      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <field name="nextcall">2025-01-01 23:00:00</field>
      <field name="active">True</field>
    </record>

  </data>
</odoo>

<odoo>
    <data noupdate="1">
        <record id="seq_biblioteca_prestamo" model="ir.sequence">
            <field name="name">Secuencia Préstamo</field>
            <field name="code">biblioteca.prestamo</field>
            <field name="prefix">PREST-</field>
            <field name="padding">5</field>
        </record>
    </data>
</odoo>
