-->
<!-- BIBLIOTECA LIBRO 

-->
    <record model="ir.ui.view" id="libro_list">
      <field name="name">biblioteca_libro list</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <list>
          <field name="titulo"/>
          <field name="autor"/>
          <field name="ejemplares"/>
          <field name="costo"/>
          <field name="descripcion"/>
          <field name="fecha_publicacion"/>
          <field name="genero"/>
          <field name="isbn"/>
          <field name="paginas"/>
          <field name="editorial"/>
          <field name="ubicacion"/>
        </list>
      </field>
    </record>


<!-- BIBLIOTECA AUTOR
-->

<record model="ir.ui.view" id="autor_list">
      <field name="name">biblioteca_autor list</field>
      <field name="model">biblioteca.autor</field>
      <field name="arch" type="xml">
        <list>
          <field name="nombre"/>
          <field name="apellido"/>
          <field name="nacimiento"/>
          <field name="libros"/>
        </list>
      </field>
    </record>

<!-- BIBLIOTECA EDITORIAL
-->

<record model="ir.ui.view" id="editorial_list">
      <field name="name">biblioteca_editorial list</field>
      <field name="model">biblioteca.editorial</field>
      <field name="arch" type="xml">
        <list>
          <field name="nombre"/>
          <field name="pais"/>
          <field name="ciudad"/>
        </list>
      </field>
    </record>

<!-- BIBLIOTECA USUARIO
-->

<record model="ir.ui.view" id="usuario_list">
    <field name="name">biblioteca_usuario list</field>
    <field name="model">biblioteca.usuario</field>
    <field name="arch" type="xml">
        <tree>
            <field name="nombre_completo"/>
            <field name="cedula"/>
            <field name="email"/>
            <field name="phone"/>
            <field name="active" invisible="1"/> <!--#pa que el usuario no lo vea-->
        </tree>
    </field>


<!-- BIBLIOTECA USUARIOS

-->

<record model="ir.ui.view" id="prestamo_list">
    <field name="name">biblioteca.prestamo list</field>
    <field name="model">biblioteca.prestamo</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="libro_id"/>
            <field name="usuario_id"/>
            <field name="fecha_prestamo"/>
            <field name="estado"/>
        </tree>
    </field>
</record>

<record model="ir.ui.view" id="prestamo_form">
    <field name="name">biblioteca_prestamo form</field>
    <field name="model">biblioteca.prestamo</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <field name="estado" widget="statusbar" clickable="True"/>
            </header>
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="libro_id"/>
                    <field name="usuario_id"/>
                    <field name="fecha_prestamo"/>
                    <field name="fecha_devolucion"/>
                    <field name="fecha_maxima" readonly="1"/> <!-- INEDITABLE -->
                </group>
                <group string="Multa">
                    <field name="multa_bol"/>
                    <field name="multa"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

