<record model="ir.ui.view" id="usuario_form">
    <field name="name">biblioteca_usuario form</field>
    <field name="model">biblioteca.usuario</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="nombre"/>
                    <field name="apellido"/>
                    <field name="nombre_completo" readonly="1"/>  <!--EL USUARIO NO PUEDE CAMBIARLO-->
