<!-- BIBLIOTECA LIBRO 

-->
    <record model="ir.ui.view" id="libro_form">
      <field name="name">biblioteca libro form</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <form>
        <group>
          <field name="titulo"/>
          <field name="autor"/>
          <field name="ejemplares"/>
          <field name="costo"/>
          <field name="descripcion"/>
          <field name="fecha_publicacion"/>
          <field name="genero"/>
          <field name="isbn"/>
          <field name="paginas"/>
          <field name="editorial"/>
          <field name="ubicacion"/>
        </group>
        </form>
      </field>
    </record>

<!-- BIBLIOTECA AUTOR

-->
    <record model="ir.ui.view" id="autor_form">
      <field name="name">biblioteca autor form</field>
      <field name="model">biblioteca.autor</field>
      <field name="arch" type="xml">
        <form>
        <group>
          <field name="nombre"/>
          <field name="apellido"/>
          <field name="nacimiento"/>
          <field name="libros"/>
        </group>
        </form>
      </field>
    </record>



<!-- BIBLIOTECA EDITORIAL

-->

    <record model="ir.ui.view" id="editorial_form">
      <field name="name">biblioteca editorial form</field>
      <field name="model">biblioteca.editorial</field>
      <field name="arch" type="xml">
        <form>
        <group>
          <field name="nombre"/>
          <field name="pais"/>
          <field name="ciudad"/>
        </group>
        </form>
      </field>
    </record>

<!-- BIBLIOTECA USUARIOS

-->
    <record model="ir.ui.view" id="usuario_form">
        <field name="name">biblioteca_usuario form</field>
        <field name="model">biblioteca.usuario</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="apellido"/>
                        <field name="name" readonly="1"/>  <!--EL USUARIO NO PUEDE CAMBIARLO-->
                    </group> <!-- agrupamos en 2 grupos para que se vea mas esteticos, primero nombres luego datos-->
                    <group string="InformaciÃ³n de Contacto">
                        <field name="cedula"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


<!-- BIBLIOTECA PRESTAMO

-->

    <record model="ir.ui.view" id="prestamo_form">
        <field name="name">biblioteca_prestamo form</field>
        <field name="model">biblioteca.prestamo</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="confirmar_prestamo"
                    string= "Confirmar prestamo"
                    type = "object"
                    class = "oe_highlight" 
                    invisible="[('estado', '!=', 'p')]"
                    />
                    <!-- EXPLICARRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRR

-->

                    <button name = "devolver"
                    string = "Devolver"
                    type = "object"
                    class = "oe_highlight"
                    invisible="[('estado', '!=', 'b')]"
                    />
                    <field name="estado" widget="statusbar" clickable="True"/>

                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="libro_id"/>
                        <field name="usuario_id"/>
                        <field name="fecha_prestamo"/>
                        <field name="fecha_devolucion"/>
                        <field name="fecha_maxima" readonly="1"/> <!-- INEDITABLE -->
                    </group>
                    <group string="Multa">
                        <field name="multa_bol"/>
                        <field name="multa"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

